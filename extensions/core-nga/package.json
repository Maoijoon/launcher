{
    "name": "core-nga",
    "displayName": "Newgrounds Auditorium",
    "description": "Provides additional functionality for Newgrounds Auditorium",
    "version": "1.0.0",
    "main": "./dist/extension.js",
    "contributes": {
        "moduleFederation": [
            {
                "scope": "nga",
                "path": "mf-manifest.json"
            }
        ],
        "themeFiles": [
            "nga.css"
        ]
    },
    "scripts": {
        "build": "gulp build --color",
        "watch": "gulp watch --color",
        "package": "gulp package --color",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-icons": "4.10.1"
    },
    "devDependencies": {
        "@module-federation/rsbuild-plugin": "^0.13.1",
        "@rsbuild/plugin-react": "1.3.0",
        "@rslib/core": "^0.6.8",
        "@types/node": "18.x",
        "babel-plugin-react-compiler": "19.1.0-rc.1",
        "glob": "^11.0.2",
        "gulp": "^4.0.2",
        "gulp-zip": "^5.0.2",
        "merge-stream": "^2.0.0",
        "rslib": "^0.0.10",
        "typescript": "^5.8.3"
    }
}
